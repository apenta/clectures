@model IList<Web.Models.Product>
@{
    ViewBag.Title = "Index";
}

<style>
    td {
        width: 200px;
    }

    tr:first-child td {
        font-weight: bold;
    }
</style>

<h2>Index</h2>

<table>
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Cost</td>
        <td></td>
    </tr>
    @foreach(var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Cost.ToString("C")</td>
            <td>
                <form action="@Url.Action("AddToCart")" method="post">
                    <button>Add to Cart</button>
                </form>
            </td>
        </tr>
    }
</table>
